<div class="bg-white p-8 rounded shadow-lg w-full max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-2">Change Your Password</h2>
  <p class="text-sm text-gray-600 mb-6">Set a new password to regain access to your account.</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :password,
      label: "New Password",
      field_type: :password_field,
      placeholder: "New Password",
      autocomplete: "new-password",
      hint: @minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil
    ) %>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :password_confirmation,
      label: "Confirm New Password",
      field_type: :password_field,
      placeholder: "Confirm New Password",
      autocomplete: "new-password"
    ) %>

    <div class="mb-6">
      <%= f.submit "Change My Password", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-150" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
