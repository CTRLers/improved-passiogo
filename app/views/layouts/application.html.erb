<!--                  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">-->
<!--            Test Notification-->
<!--          </button>-->
<!--        </div>-->
      <%# end %>
    <%# end %>

    <%= render(NavigationComponent.new(nav: @nav)) %>
    <%#= render SidebarComponent.new() %>



    <main class="flex-col pt-16">
<!--      <div data-controller="hello"> </div>-->



      <%= yield %>

    </main>
  </body>
</html>
