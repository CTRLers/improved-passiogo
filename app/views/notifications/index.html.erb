<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Notifications</h1>
    
    <% if @notifications.unread.any? %>
      <button data-controller="notification"
              data-action="notification#markAllAsRead"
              class="text-sm text-blue-600 hover:text-blue-800">
        Mark all as read
      </button>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @notifications.each do |notification| %>
      <div class="bg-white shadow rounded-lg p-4 <%= notification.read_at ? 'opacity-75' : '' %>"
           data-controller="notification"
           data-notification-id="<%= notification.id %>">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="font-semibold"><%= notification.title %></h3>
            <p class="text-gray-600"><%= notification.body %></p>
            <p class="text-sm text-gray-500 mt-1">
              <%= time_ago_in_words(notification.created_at) %> ago
            </p>
          </div>
          
          <button data-action="notification#toggle"
                  class="text-sm text-gray-500 hover:text-gray-700">
            <%= notification.read_at ? 'Mark as unread' : 'Mark as read' %>
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @notifications %>
</div>