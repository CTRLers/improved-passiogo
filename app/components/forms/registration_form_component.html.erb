<div class="bg-white p-8 rounded shadow-lg w-full max-w-md">
  <h2 class="text-2xl font-bold mb-2">Create Your Account</h2>
  <p class="text-sm text-gray-600 mb-6">Join PassioGo for real-time bus tracking and personalized notifications.</p>

  <%= form_for(resource, as: resource_name, url: helpers.registration_path(resource_name)) do |f| %>

    <div class=" flex space-x-4">

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :first_name,
      label: "First Name",
      placeholder: "First Name"
    ) %>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :last_name,
      label: "Last Name",
      placeholder: "Last Name"
    ) %>
    </div>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :email,
      label: "Email Address",
      field_type: :email_field,
      placeholder: "Email Address",
      autocomplete: "email"
    ) %>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :password,
      label: "Password",
      field_type: :password_field,
      placeholder: "Password",
      autocomplete: "new-password"
    ) %>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :password_confirmation,
      label: "Confirm Password",
      field_type: :password_field,
      placeholder: "Confirm Password",
      autocomplete: "new-password"
    ) %>


<!--    <div class="mb-4 flex items-center">-->
      <%#= f.check_box :terms, class: "mr-2" %>
      <%#= f.label :terms, class: "text-gray-700" do %>
<!--        I agree to the <%#= link_to "Terms & Conditions", "#", class: "text-blue-500 underline" %>-->
      <%# end %>
<!--    </div>-->

    <div class="mb-6 bg-apple">
      <%= f.submit "Register", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-150" %>
    </div>
  <% end %>

  <div class="flex items-center mb-4">
    <div class="flex-grow border-t border-gray-300"></div>
    <span class="mx-2 text-gray-500 text-sm">or register with</span>
    <div class="flex-grow border-t border-gray-300"></div>
  </div>

  <div class="flex justify-center space-x-4">
    <%= link_to "Google", user_google_oauth2_omniauth_authorize_path, class: "bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded" %>
    <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 rounded" %>
  </div>

  <%#= render "devise/shared/links" %>
</div>
