<div class="bg-white p-8 rounded shadow-lg w-full max-w-md">
  <h2 class="text-2xl font-bold mb-2">Create Your Account</h2>
  <p class="text-sm text-gray-600 mb-6">Join PassioGo for real-time bus tracking and personalized notifications.</p>

  <!-- Show Devise-style error messages -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: helpers.registration_path(resource_name)) do |f| %>
    <div class="flex space-x-4">
      <%= render Forms::TextInputComponent.new(
        form: f,
        field: :first_name,
        label: "First Name",
        placeholder: "First Name"
      ) %>

      <%= render Forms::TextInputComponent.new(
        form: f,
        field: :last_name,
        label: "Last Name",
        placeholder: "Last Name"
      ) %>
    </div>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :email,
      label: "Email Address",
      field_type: :email_field,
      placeholder: "Email Address",
      autocomplete: "email"
    ) %>

    <div class="mb-4">
      <%= render Forms::TextInputComponent.new(
        form: f,
        field: :password,
        label: "Password",
        field_type: :password_field,
        placeholder: "Password",
        autocomplete: "new-password"
      ) %>
      <% if minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1">(<%= minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <%= render Forms::TextInputComponent.new(
      form: f,
      field: :password_confirmation,
      label: "Confirm Password",
      field_type: :password_field,
      placeholder: "Confirm Password",
      autocomplete: "new-password"
    ) %>

    <div class="mb-6">
      <%= f.submit "Register", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-150" %>
    </div>
  <% end %>

  <div class="flex items-center mb-4">
    <div class="flex-grow border-t border-gray-300"></div>
    <span class="mx-2 text-gray-500 text-sm">or register with</span>
    <div class="flex-grow border-t border-gray-300"></div>
  </div>

  <!-- Add Devise-style shared links (like login, forgot password, etc.) -->
  <%= render "devise/shared/links" %>
</div>
