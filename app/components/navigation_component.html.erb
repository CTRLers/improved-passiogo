


<nav class="fixed top-0 w-full bg-white shadow z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <!-- Branding & Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
<!--          <img src="/assets/logo.png" alt="PassioGO Logo" class="h-8 w-8 mr-2">-->
          <span class="font-bold text-xl">PassioGO</span>
        <% end %>
      </div>
      <!-- Navigation Items -->
      <div class="hidden md:flex space-x-8">
        <%= link_to "Dashboard", root_path, class: "text-gray-600 hover:text-blue-500" %>
        <%#= link_to "Routes", routes_path, class: "text-gray-600 hover:text-blue-500" %>
        <%#= link_to "Bus Schedule", bus_schedule_path, class: "text-gray-600 hover:text-blue-500" %>
        <%#= link_to "Real-Time Tracking", tracking_path, class: "text-gray-600 hover:text-blue-500" %>
